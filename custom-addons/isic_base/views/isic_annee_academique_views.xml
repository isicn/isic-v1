<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- ============================================================ -->
    <!-- Form view                                                    -->
    <!-- ============================================================ -->
    <record id="view_isic_annee_academique_form" model="ir.ui.view">
        <field name="name">isic.annee.academique.form</field>
        <field name="model">isic.annee.academique</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_ouvrir"
                        string="Ouvrir"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'draft'"
                    />
                    <button
                        name="action_cloturer"
                        string="Clôturer"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'open'"
                    />
                    <button
                        name="action_reset_draft"
                        string="Remettre en brouillon"
                        type="object"
                        invisible="state == 'draft'"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,open,closed"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" />
                            <field name="date_start" />
                            <field name="date_end" />
                        </group>
                        <group>
                            <field name="inscription_ouverte" />
                            <field name="company_id" groups="base.group_multi_company" />
                            <field name="active" invisible="1" />
                        </group>
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- List view                                                    -->
    <!-- ============================================================ -->
    <record id="view_isic_annee_academique_list" model="ir.ui.view">
        <field name="name">isic.annee.academique.list</field>
        <field name="model">isic.annee.academique</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="code" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'open'" decoration-muted="state == 'closed'" />
                <field name="inscription_ouverte" />
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Search view                                                  -->
    <!-- ============================================================ -->
    <record id="view_isic_annee_academique_search" model="ir.ui.view">
        <field name="name">isic.annee.academique.search</field>
        <field name="model">isic.annee.academique</field>
        <field name="arch" type="xml">
            <search>
                <field name="code" />
                <filter name="filter_draft" string="Brouillon" domain="[('state','=','draft')]" />
                <filter name="filter_open" string="En cours" domain="[('state','=','open')]" />
                <filter name="filter_closed" string="Clôturées" domain="[('state','=','closed')]" />
                <separator />
                <filter name="filter_inscription" string="Inscriptions ouvertes" domain="[('inscription_ouverte','=',True)]" />
            </search>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Action + Menu                                                -->
    <!-- ============================================================ -->
    <record id="action_isic_annee_academique" model="ir.actions.act_window">
        <field name="name">Années académiques</field>
        <field name="res_model">isic.annee.academique</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_isic_root"
        name="ISIC"
        sequence="5"
        web_icon="isic_base,static/description/icon.png"
    />
    <menuitem
        id="menu_isic_configuration"
        name="Configuration"
        parent="menu_isic_root"
        sequence="90"
        groups="group_direction"
    />
    <menuitem
        id="menu_isic_annee_academique"
        name="Années académiques"
        parent="menu_isic_configuration"
        action="action_isic_annee_academique"
        sequence="10"
    />
</odoo>
