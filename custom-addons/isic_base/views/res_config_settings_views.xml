<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.isic_base</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="ISIC" groups="isic_base.group_direction" name="isic_base">
                    <block title="Année académique">
                        <setting
                            string="Année courante"
                            help="Sélectionnez l'année académique active pour l'ensemble du système"
                        >
                            <field
                                name="isic_annee_academique_id"
                                domain="[('state','=','open')]"
                            />
                        </setting>
                    </block>
                    <block title="Établissement">
                        <setting
                            string="Nom de l'établissement"
                            help="Nom officiel de l'établissement"
                        >
                            <field name="isic_nom_etablissement" placeholder="Institut Supérieur de l'Information et de la Communication" />
                        </setting>
                        <setting
                            string="Code établissement"
                            help="Code officiel de l'établissement"
                        >
                            <field name="isic_code_etablissement" placeholder="ISIC" />
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
