<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="isic_dashboard.KpiCard">
        <div t-attf-class="isic-kpi-card {{ colorClass }} {{ props.action ? 'isic-kpi-card--clickable' : '' }}"
             t-on-click="onKpiClick"
             role="button"
             t-att-title="props.action ? 'Cliquez pour voir le dÃ©tail' : ''">
            <div class="isic-kpi-card__icon">
                <i t-attf-class="fa {{ props.icon }}" t-att-title="props.label" />
            </div>
            <div class="isic-kpi-card__body">
                <div class="isic-kpi-card__value">
                    <t t-out="props.value" />
                </div>
                <div class="isic-kpi-card__label">
                    <t t-out="props.label" />
                </div>
            </div>
        </div>
    </t>
</templates>
