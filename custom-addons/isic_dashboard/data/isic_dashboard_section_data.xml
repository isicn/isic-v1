<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">

        <record id="section_direction" model="isic.dashboard.section">
            <field name="name">Vue d'ensemble</field>
            <field name="code">direction</field>
            <field name="icon">fa-tachometer</field>
            <field name="sequence">10</field>
            <field name="group_ids" eval="[(4, ref('isic_base.group_isic_direction'))]" />
            <field name="has_chart">False</field>
        </record>

        <record id="section_scolarite" model="isic.dashboard.section">
            <field name="name">Scolarité</field>
            <field name="code">scolarite</field>
            <field name="icon">fa-graduation-cap</field>
            <field name="sequence">20</field>
            <field name="group_ids" eval="[(4, ref('isic_base.group_isic_scolarite'))]" />
            <field name="has_chart">False</field>
        </record>

        <record id="section_ged" model="isic.dashboard.section">
            <field name="name">Documents</field>
            <field name="code">ged</field>
            <field name="icon">fa-folder-open</field>
            <field name="sequence">30</field>
            <!-- group_ids vide = visible à tous les utilisateurs internes -->
            <field name="has_chart">True</field>
        </record>

        <record id="section_approbation" model="isic.dashboard.section">
            <field name="name">Approbations</field>
            <field name="code">approbation</field>
            <field name="icon">fa-check-circle-o</field>
            <field name="sequence">40</field>
            <!-- group_ids vide = visible à tous les utilisateurs internes -->
            <field name="has_chart">True</field>
        </record>

    </data>
</odoo>
