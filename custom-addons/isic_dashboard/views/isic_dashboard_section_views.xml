<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- ============================================================ -->
    <!-- Form                                                         -->
    <!-- ============================================================ -->
    <record id="isic_dashboard_section_view_form" model="ir.ui.view">
        <field name="name">isic.dashboard.section.form</field>
        <field name="model">isic.dashboard.section</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" widget="boolean_button"
                            options="{'terminology': {'string_true': 'Publié', 'string_false': 'Archivé'}}" />
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Section" />
                        <h1>
                            <field name="name" placeholder="Nom de la section" />
                        </h1>
                    </div>
                    <group>
                        <group name="config_left">
                            <field name="code" />
                            <field name="icon" placeholder="fa-th-large" />
                            <field name="sequence" />
                        </group>
                        <group name="config_right">
                            <field name="group_ids" widget="many2many_tags"
                                options="{'no_create': True}" />
                            <field name="has_chart" />
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Notes ou description..." />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- List                                                         -->
    <!-- ============================================================ -->
    <record id="isic_dashboard_section_view_list" model="ir.ui.view">
        <field name="name">isic.dashboard.section.list</field>
        <field name="model">isic.dashboard.section</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="code" />
                <field name="icon" />
                <field name="group_ids" widget="many2many_tags"
                    options="{'no_create': True}" />
                <field name="has_chart" />
                <field name="active" widget="boolean_toggle" />
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Action                                                       -->
    <!-- ============================================================ -->
    <record id="isic_dashboard_section_action" model="ir.actions.act_window">
        <field name="name">Sections du dashboard</field>
        <field name="res_model">isic.dashboard.section</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'active_test': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une section du dashboard
            </p>
            <p>
                Chaque section est liée à un groupe de sécurité et peut être
                publiée ou archivée.
            </p>
        </field>
    </record>
</odoo>
