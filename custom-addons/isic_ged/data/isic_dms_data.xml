    <record id="dir_direction" model="dms.directory">
        <field name="name">Direction</field>
        <field name="is_root_directory" eval="True" />
        <field name="storage_id" ref="storage_ged_isic" />
        <field name="category_id" ref="category_direction" />
        <field name="group_ids" eval="[
            (4, ref('access_group_direction')),
            (4, ref('access_group_utilisateur')),
        ]" />
    </record>
    <record id="dir_direction_notes" model="dms.directory">
        <field name="name">Notes de service</field>
        <field name="parent_id" ref="dir_direction" />
        <field name="inherit_group_ids" eval="True" />
