        <field name="name">Direction</field>
    </record>
    <record id="category_scolarite" model="dms.category">
        <field name="name">Scolarite</field>
    </record>
    <record id="category_enseignement" model="dms.category">
        <field name="name">Enseignement</field>
    </record>
    <record id="category_stages" model="dms.category">
        <field name="name">Stages et Formation continue</field>
    </record>
    <record id="category_bibliotheque" model="dms.category">
        <field name="name">Bibliotheque</field>
    </record>
    <record id="category_rh" model="dms.category">
        <field name="name">Ressources Humaines</field>
    </record>
    <record id="category_finances" model="dms.category">
        <field name="name">Affaires financieres</field>
    </record>
    <record id="category_informatique" model="dms.category">
        <field name="name">Informatique</field>
    </record>
    <record id="category_cooperation" model="dms.category">
        <field name="name">Cooperation</field>
    </record>
    <record id="category_recherche" model="dms.category">
        <field name="name">Recherche et cooperation</field>
    </record>
    <record id="category_communication" model="dms.category">
        <field name="name">Communication</field>
    </record>
    <record id="category_partage" model="dms.category">
        <field name="name">Documents partages</field>
    </record>

    <!-- ============================================================ -->
    <!-- Tags                                                         -->
    <!-- ============================================================ -->
    <record id="tag_urgent" model="dms.tag">
        <field name="name">Urgent</field>
        <field name="color">1</field>
    </record>
    <record id="tag_confidentiel" model="dms.tag">
        <field name="name">Confidentiel</field>
        <field name="color">4</field>
    </record>
    <record id="tag_a_signer" model="dms.tag">
        <field name="name">A signer</field>
        <field name="color">2</field>
    </record>
    <record id="tag_original" model="dms.tag">
        <field name="name">Original</field>
        <field name="color">10</field>
    </record>
    <record id="tag_copie" model="dms.tag">
        <field name="name">Copie</field>
        <field name="color">5</field>
    </record>

    <!-- ============================================================ -->
    <!-- Groupes d'acces DMS mappes vers groupes ISIC                 -->
    <!-- ============================================================ -->

    <!-- Lecture seule pour tous les internes -->
    <record id="access_group_utilisateur" model="dms.access.group">
        <field name="name">ISIC Utilisateurs</field>
        <field name="group_ids" eval="[(4, ref('base.group_user'))]" />
        <field name="perm_create" eval="False" />
        <field name="perm_write" eval="False" />
        <field name="perm_unlink" eval="False" />
    </record>

    <!-- Scolarite : creer + ecrire -->
    <record id="access_group_gestionnaire" model="dms.access.group">
        <field name="name">ISIC Gestionnaires</field>
        <field name="group_ids" eval="[(4, ref('isic_base.group_isic_scolarite'))]" />
        <field name="perm_create" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_unlink" eval="False" />
    </record>

    <!-- Direction : CRUD complet -->
    <record id="access_group_direction" model="dms.access.group">
        <field name="name">ISIC Direction</field>
        <field name="group_ids" eval="[(4, ref('isic_base.group_isic_direction'))]" />
        <field name="perm_create" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_unlink" eval="True" />
