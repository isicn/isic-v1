<?xml version="1.0" encoding="UTF-8" ?>
<odoo noupdate="1">
    <!-- ============================================================ -->
    <!-- Storage GED ISIC                                             -->
    <!-- ============================================================ -->
    <record id="storage_ged_isic" model="dms.storage">
        <field name="name">GED ISIC</field>
        <field name="save_type">database</field>
