<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- ============================================================ -->
    <!-- Form                                                         -->
    <!-- ============================================================ -->
    <record id="view_isic_document_type_form" model="ir.ui.view">
        <field name="name">isic.document.type.form</field>
        <field name="model">isic.document.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="code" />
                            <field name="sequence" />
                        </group>
                        <group>
                            <field name="validation_required" />
                            <field name="retention_days" />
                            <field name="active" />
                        </group>
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- List                                                         -->
    <!-- ============================================================ -->
    <record id="view_isic_document_type_list" model="ir.ui.view">
        <field name="name">isic.document.type.list</field>
        <field name="model">isic.document.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle" />
                <field name="code" />
                <field name="name" />
                <field name="validation_required" />
                <field name="retention_days" />
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Action + Menu                                                -->
    <!-- ============================================================ -->
    <record id="action_isic_document_type" model="ir.actions.act_window">
        <field name="name">Types de documents</field>
        <field name="res_model">isic.document.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_isic_document_type"
        name="Types de documents"
        parent="isic_base.menu_isic_configuration"
        action="action_isic_document_type"
        sequence="20"
    />
</odoo>
